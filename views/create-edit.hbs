<form action="/" method="post">
    <input type="text" name="name" value="{{name}}">
    
    <input type="text" name="special" value="{{special}}">
    
    <select id="size-select" name="size" value="{{size}}">
        <option value="small">Small</option>
        <option value="medium">Medium</option>
        <option value="big">Big</option>
    </select>
    
    {{#if name}}
    <input type="hidden" name="_id" value="{{this._id}}">
    <button type="submit">Edit tortilla</button>
    {{else}}
    <button type="submit">Create tortilla</button>
    {{/if}}
</form>